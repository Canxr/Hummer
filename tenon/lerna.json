{
  "tagVersionPrefix": "tenon_",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "message": "chore(release): tenon publish",
      "allowBranch": [
        "master",
        "release"
      ],
      "ignoreChanges": [
        "*.md",
        "lerna.json"
      ],
      "registry": "https://registry.npmjs.org/"
    },
    "npmClientArgs": [
      "--no-package-lock"
    ]
  }
}
